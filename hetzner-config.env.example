# Hetzner Cloud API Configuration
# Copy this file to hetzner-config.env and fill in your values

# Get your API token from: https://console.hetzner.com/
# Project -> Security -> API Tokens -> Generate API Token
HETZNER_API_TOKEN="your-api-token-here"

# Cloudflare API Configuration (optional, for DNS automation)
# Get your API token from: https://dash.cloudflare.com/profile/api-tokens
# Create token with permissions: Zone.Zone:Read, Zone.DNS:Edit
# CLOUDFLARE_API_TOKEN="your_cloudflare_api_token_here"

# Server Configuration
SERVER_NAME="stx-node-map-prod"
SERVER_TYPE="cx21"  # Options: cx11 (2GB), cx21 (4GB), cx31 (8GB), cx41 (16GB), etc.
SERVER_LOCATION="nbg1"  # Options: nbg1 (Nuremberg), fsn1 (Falkenstein), hel1 (Helsinki), ash (Ashburn)
SERVER_IMAGE="ubuntu-22.04"  # Options: ubuntu-22.04, ubuntu-24.04, debian-11, debian-12

# SSH Key Name (must exist in your Hetzner project)
# Create SSH keys at: https://console.hetzner.com/ -> Project -> Security -> SSH Keys
SSH_KEY_NAME="my-ssh-key"

# Optional: Firewall configuration
ENABLE_FIREWALL="true"

# Optional: Enable backups (costs extra)
ENABLE_BACKUPS="false"

# GitHub Repository Configuration
# Used by deploy script to clone the monorepo
GITHUB_USERNAME="your-username"
REPO_NAME="stx-node-map-monorepo"

# Domain Configuration (required for SSL setup)
# Point your domain's A record to the server IP before running 03-setup-ssl.sh
DOMAIN_NAME="your-domain.com"

# Email for Let's Encrypt certificate notifications (optional)
# Defaults to admin@DOMAIN_NAME if not set
# EMAIL="your-email@example.com"
