# Hetzner Cloud API Configuration
# Copy this file to hetzner-config.env and fill in your values

# Get your API token from: https://console.hetzner.cloud/
# Project -> Security -> API Tokens -> Generate API Token
HETZNER_API_TOKEN="your-api-token-here"

# Server Configuration
SERVER_NAME="stx-node-map-prod"
SERVER_TYPE="cx21"  # Options: cx11 (2GB), cx21 (4GB), cx31 (8GB), cx41 (16GB), etc.
SERVER_LOCATION="nbg1"  # Options: nbg1 (Nuremberg), fsn1 (Falkenstein), hel1 (Helsinki), ash (Ashburn)
SERVER_IMAGE="ubuntu-22.04"  # Options: ubuntu-22.04, ubuntu-24.04, debian-11, debian-12

# SSH Key Name (must exist in your Hetzner project)
# Create SSH keys at: https://console.hetzner.cloud/ -> Project -> Security -> SSH Keys
SSH_KEY_NAME="my-ssh-key"

# Optional: Firewall configuration
ENABLE_FIREWALL="true"

# Optional: Enable backups (costs extra)
ENABLE_BACKUPS="false"

# Network/Domain (optional)
# DOMAIN_NAME="stxnodes.example.com"
