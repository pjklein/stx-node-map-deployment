# Backend environment configuration
# Copy this file to .env.production and configure for your environment

# API Configuration
FLASK_ENV=production
FLASK_DEBUG=false

# Database/Data
DATA_FILE=/opt/stx-node-map/backend/data.json
STATUS_FILE=/opt/stx-node-map/backend/status.json

# Stacks Node Configuration
STACKS_RPC_URL=https://api.mainnet.hiro.so
STACKS_NETWORK=mainnet

# Node Discovery
DISCOVERY_INTERVAL=3600
MAX_NODES=1000

# Logging
LOG_LEVEL=INFO
